{
  "name": "Claude Code with Playwright (Python)",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        // Claude Code
        "anthropic.claude-code",

        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-python.black-formatter",

        // Git
        "eamodio.gitlens",

        // Error Display
        "usernamehw.errorlens",

        // Docker Support
        "ms-azuretools.vscode-docker",

        // Quality of Life
        "streetsidesoftware.code-spell-checker",
        "christian-kohler.path-intellisense",
        "wayou.vscode-todo-highlight",

        // UI/Icons
        "pkief.material-icon-theme",

        // Playwright
        "ms-playwright.playwright"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        },
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false
      }
    }
  },

  "remoteUser": "vscode",

  // Container runtime configuration for Playwright
  "runArgs": ["--shm-size=2gb", "--ipc=host"],

  // Environment variables
  "containerEnv": {
    "DISPLAY": ":99",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "0",
    "PLAYWRIGHT_BROWSERS_PATH": "/home/vscode/.cache/ms-playwright"
  },

  // Forward common web development ports
  "forwardPorts": [3000, 5000, 8000, 8080],

  // Mount points for persistent Playwright browser cache
  "mounts": [
    "source=${localWorkspaceFolderBasename}-playwright-cache,target=/home/vscode/.cache/ms-playwright,type=volume"
  ],

  // Ensure the container has enough resources
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  }
}
